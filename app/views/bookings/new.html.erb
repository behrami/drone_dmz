<div class = 'container'>
<%= form_for @booking, url: session_bookings_path, method: :post do |f| %>

  <%= f.label :patron_id, "Patron" %>
  <%= f.collection_select :patron_id, Patron.order(:first_name), :id, :first_name, {include_blank: true}, {class: "form-control"} %><br>

  <%= f.label :pilot_id, "Pilot" %>
  <%= f.collection_select :pilot_id, Pilot.order(:first_name), :id, :first_name, {include_blank: true}, {class: "form-control"} %><br>

  <%= f.text_area :summary, placeholder: "Additional Info", class: "form-control" %><br>

  <%= f.label :when, "When" %>
  <%= f.date_select :when, {include_blank: false}, {class: "form-control"} %><br>

  <%= f.submit %>
<% end %>
</div>
