<div class = "container text-justify">

  <ul>
    <% @pilots.each do |pilot| %>
      <li>
        <dl class="row">

          <dt class="col-sm-3">First name:</dt>
          <dd class="col-sm-9"><%= pilot.first_name %></dd>

          <dt class="col-sm-3">Last name:</dt>
          <dd class="col-sm-9"><%= pilot.last_name %></dd>

          <dt class="col-sm-3 text-truncate">Email:</dt>
          <dd class="col-sm-9"><%= pilot.email %></dd>

          <dt class="col-sm-3 text-truncate">Phone:</dt>
          <dd class="col-sm-9"><%= pilot.phone %></dd>

          <dt class="col-sm-3 text-truncate">Drivers License:</dt>
          <dd class="col-sm-9"><%= pilot.driver_license %></dd>

          <dt class="col-sm-3 text-truncate">Drone Number:</dt>
          <dd class="col-sm-9"><%= pilot.drone_number %></dd>

          <dt class="col-sm-3 text-truncate">Expected Cost:</dt>
          <dd class="col-sm-9"><%= pilot.cost %></dd>

          <dt class="col-sm-3 text-truncate">Summary:</dt>
          <dd class="col-sm-9"><%= pilot.summary %></dd>

          <dt class="col-sm-3 text-truncate">Street Address:</dt>
          <dd class="col-sm-9"><%= pilot.street %></dd>

          <dt class="col-sm-3 text-truncate">City:</dt>
          <dd class="col-sm-9"><%= pilot.city %></dd>

          <dt class="col-sm-3 text-truncate">Province:</dt>
          <dd class="col-sm-9"><%= pilot.state %></dd>

          <dt class="col-sm-3 text-truncate">Country:</dt>
          <dd class="col-sm-9"><%= pilot.country %></dd>

          <dt class="col-sm-3 text-truncate">Postal Code:</dt>
          <dd class="col-sm-9"><%= pilot.postal_code %></dd>

          <dt class="col-sm-3 text-truncate">Available Days:</dt>
          <dd class="col-sm-9"><%= pilot.available_days %></dd>

          <%= link_to 'Delete', session_pilot_path(pilot), class: "btn btn-danger", method: :delete %>

        </dl>
      </li>
    <% end %>
  </ul>

</div>
